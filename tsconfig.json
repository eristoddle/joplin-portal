{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "obsidian": ["./tests/mocks/obsidian-mock.ts"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": [
    "**/*.ts",
    "src/obsidian-extensions.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}